{
  "http": {
    "port": 443,
    "certPath": "api.galley.dev.pem",
    "keyPath": "api.galley.dev-key.pem"
  },
  "jwt": {
    "secret": "secret",
    "keystore": "keystore.p12",
    "type": "pkcs12",
    "pepper": "long-and-random-string",
    "ttl": {
      "access": 90
    }
  },
  "api": {
    "openApiFile": "openapi.yaml",
    "cors": [".*"],
    "host": "api.galley.dev"
  },
  "webapp": {
    "host": "cloud.galley.dev",
    "cors": ["*"]
  },
  "db": {
    "port": 5432,
    "database": "galley",
    "host": "localhost",
    "pool_size": 5,
    "username": "username",
    "password": "password"
  },
  "messaging": {
    "email": {
      "hostname": "127.0.0.1",
      "port": 25,
      "username": "email@galley.run",
      "password": "blank",
      "defaults": {
        "from": "Galley <welcome@galley.run>",
        "cc": ["Galley <cc@galley.run>"],
        "bcc": ["Galley <bcc@galley.run>"],
        "urlPrefix": "https://cloud.galley.dev"
      }
    }
  }
}
