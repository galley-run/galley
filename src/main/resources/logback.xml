<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%blue(%d{HH:mm:ss.SSS}) [%yellow(%thread)] [%highlight(%level)] %cyan(%logger{36}): %msg%n</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
